@page
@model AashaGifts.Web.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}


<h2>Category Management</h2>
<a asp-page="Create" class="btn btn-success mb-3">Add New Category</a>
<table class="table table-bordered table-hover align-middle table-responsive table-dark text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Category) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
