@page
@model AashaGifts.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .login-background {
        position: center;
        background: url('/images/lakincreation.png') no-repeat center center;
        background-size: cover;
        opacity: 0.07;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 0;
    }

    .login-container {
        position: relative;
        z-index: 1;
    }
</style>

<div class="position-relative min-vh-100 d-flex align-items-center justify-content-center bg-dark text-light">
    <div class="login-background"></div>

    <div class="login-container container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4 bg-secondary bg-opacity-10 p-4 rounded shadow">
                <h2 class="mb-4 text-warning">Login</h2>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" class="form-control" type="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-warning w-100">Login</button>
                    <div class="mt-2">
                        <a asp-page="/Account/Register" class="text-light">Don't have an account? Sign up</a>
                    </div>
                </form>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
                }
            </div>
        </div>
    </div>
</div>
